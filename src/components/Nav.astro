---
import { Icon } from "astro-icon/components";
import Link from "./Link.astro";
import navData from "../data/navData";
---

<nav aria-label="Primary">
  <div class="navbar">
    <a href="/" aria-label="Go home">
      <Icon name="logomark" width={60} />
    </a>
    <ul>
      {
        navData.map((item) => (
          <Link
            href={item.path}
            text={item.name}
            style="primary"
            isFilled={false}
            data-navLink
          />
        ))
      }
    </ul>
  </div>
</nav>

<script>
  import "../scripts/nav.ts";
</script>
